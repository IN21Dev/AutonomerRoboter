#include <ArduinoRobot.h>

void setup(){
  Robot.begin();
  Serial.begin(9600);
}
void loop(){
Serial.printIn(RobotkeyboardRead());
delay(5);
}
  Robot.keyboardRead(BUTTON_NONE)
  Robot.motorsWrite(0,0); //Anhalten - Full.
  {
  Robot.keyboardRead(BUTTON_UP)
  Robot.motorsWrite(255,255); //Vorwaerts Fahren - full speed
  }
  {
  Robot.keyboardRead(BUTTON_DOWN)
  Robot.motorsWrite(-255,-255); //Rueckwaerts Fahren - full speed
  }
  {
  Robot.keyboardRead(BUTTON_LEFT)
  Robot.motorsWrite(-255,255); //Links Lenken - full speed
  }
  {
  Robot.keyboardRead(BUTTON_RIGHT)
  Robot.motorsWrite(255,-255);//Rechts Lenken - full speed
  }
  //Robot.motorsWrite(255,255); Vorwaerts Fahren - full speed
  //Robot.motorsWrite(-255,-255); Rueckwaerts Fahren - full speed
  //Robot.motorsWrite(255,-255);Rechts Lenken - full speed
  //Robot.motorsWrite(-255,255); Links Lenken - full speed
  //Robot.motorsWrite(0,0); Anhalten - Full.
}